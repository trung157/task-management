{
  "name": "taskflow-backend",
  "version": "1.0.0",
  "description": "TaskFlow API server with Express, TypeScript, PostgreSQL, and JWT authentication",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:debug": "nodemon --exec ts-node --inspect=0.0.0.0:9229 src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "db:init": "ts-node src/db-init.ts init",
    "db:reset": "ts-node src/db-init.ts reset",
    "db:setup": "ts-node src/scripts/db-setup.ts",
    "db:test": "ts-node src/scripts/db-setup.ts test",
    "db:health": "ts-node src/scripts/db-setup.ts health",
    "db:info": "ts-node src/scripts/db-setup.ts info",
    "db:pool-stats": "ts-node src/scripts/db-setup.ts pool-stats",
    "db:warmup": "ts-node src/scripts/db-setup.ts warmup",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:migrate:files": "ts-node src/scripts/run-migrations.ts",
    "db:migrate:status": "ts-node src/scripts/run-migrations.ts --status",
    "db:migrate:validate": "ts-node src/scripts/run-migrations.ts --validate",
    "db:validate": "ts-node src/scripts/validate-schema.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "test:task-service": "ts-node test-task-service.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:integration:runner": "ts-node src/tests/integration/integration-test-runner.ts",
    "test:unit": "jest --testPathIgnorePatterns=/integration/",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:db:setup": "npx ts-node scripts/setup-test-db.ts setup",
    "test:db:reset": "npx ts-node scripts/setup-test-db.ts reset",
    "test:db:drop": "npx ts-node scripts/setup-test-db.ts drop",
    "env:setup": "ts-node src/scripts/env-setup.ts setup",
    "env:validate": "ts-node src/scripts/env-setup.ts validate",
    "env:generate": "ts-node src/scripts/env-setup.ts generate",
    "env:health": "ts-node src/scripts/env-setup.ts health",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "keywords": [
    "task-management",
    "api",
    "postgresql",
    "typescript",
    "express",
    "jwt",
    "rest-api"
  ],
  "author": "TaskFlow Team",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/sanitize-html": "^2.16.0",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.14",
    "pg": "^8.16.3",
    "redis": "^4.7.0",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5",
    "winston": "^3.14.2",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.0.13",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
